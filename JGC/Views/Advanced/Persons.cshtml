<script type="text/javascript">
      $(document).ready(function(){
          $("#tambahperson").click(function () {
              $("#myModal").modal();
          });
          $("#editperson").click(function () {
              $("#myModal").modal();
          });
      });

      $("#check-all").click(function () {
          $(".checks").prop('checked', $(this).prop('checked'));
      });

</script>

