
@{
    ViewBag.Title = "Customers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="right_col" role="main">
    <div class="">
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="menusect">
                        <h5>
                            Customers
                        </h5>
                    </div>
                    <div class="x_title">
                        <h2>List of Customers</h2>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">

                        <p class="headcontent">
                            Manage your customers. After you add customers, you can lease assets to them.
                        </p>

                        <div class="col-md-12 col-sm-12 col-xs-12 text-muted font-13 m-b-30 no-padding">
                            <div class="mgbtm20">
                                <a href="#" id="tambahcustomer" class="btn btn-success btn-cust">Add New Customer</a>
                            </div>
                        </div>
                        <table id="datatable-checkbox" class="table table-striped table-bordered bulk_action">
                            <thead>
                                <tr>
                                    <th width="2%"><input type="checkbox" id="check-all" class="flat"></th></th>
                                    <th>Name</th>
                                    <th>Company</th>
                                    <th>Address 1</th>
                                    <th>Address 2</th>
                                    <th>City</th>
                                    <th>State</th>
                                    <th>Zip</th>
                                    <th>Country</th>
                                    <th>Phone</th>
                                    <th>Cell</th>
                                    <th>Email</th>
                                    <th style="width:11%;"></th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td><input type="checkbox" id="check-all" class="flat"></td>
                                    <td><a href="#">JGC</a></td>
                                    <td><a href="#">JGC Corp</a></td>
                                    <td><a href="#">Jl. Jakarta</a></td>
                                    <td><a href="#"></a></td>
                                    <td><a href="#">Jakarta</a></td>
                                    <td><a href="#">DKI Jakarta</a></td>
                                    <td><a href="#">10160</a></td>
                                    <td><a href="#">Indonesia</a></td>
                                    <td><a href="#">08182939200</a></td>
                                    <td><a href="#"></a></td>
                                    <td><a href="#">admin@jgc.com</a></td>
                                    <td class="txtcenter">
                                        <a href="#" id="editcustomer" class="btn btn-default">Edit</a>
                                        <a href="#" class="btn btn-danger">Delete</a>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- MODAL1 START -->
<div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content col-md-12 col-sm-12 col-xs-12 pdlr1">
            <div class="modal-header">
                <h4 class="modal-title ">Add a Customer</h4>
            </div>
            <div class="modal-body col-md-12 col-sm-12 col-xs-12">

                <form class="form-horizontal form-label-left">

                    <div class="form-group">
                        <label class="control-label col-md-2 col-sm-2 col-xs-12">Full Name</label>
                        <div class="col-md-10 col-sm-10 col-xs-12">
                            <input type="text" name="Full Name" class="form-control col-md-10" placeholder="Full Name" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2 col-sm-2 col-xs-12">Company</label>
                        <div class="col-md-10 col-sm-10 col-xs-12">
                            <input type="text" name="Company" class="form-control col-md-10" placeholder="Company" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2 col-sm-2 col-xs-12">Address 1</label>
                        <div class="col-md-10 col-sm-10 col-xs-12">
                            <input type="text" name="Address" class="form-control col-md-10" placeholder="Address 1" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2 col-sm-2 col-xs-12">Address 2</label>
                        <div class="col-md-10 col-sm-10 col-xs-12">
                            <input type="text" name="Address2" class="form-control col-md-10" placeholder="Address 2" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2 col-sm-2 col-xs-12">City</label>
                        <div class="col-md-10 col-sm-10 col-xs-12">
                            <input type="text" name="City" class="form-control col-md-10" placeholder="City" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2 col-sm-2 col-xs-12">State</label>
                        <div class="col-md-10 col-sm-10 col-xs-12">
                            <input type="text" name="State" class="form-control col-md-10" placeholder="State" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2 col-sm-2 col-xs-12">Zip</label>
                        <div class="col-md-10 col-sm-10 col-xs-12">
                            <input type="text" name="Zip" class="form-control col-md-10" placeholder="Zip" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2 col-sm-2 col-xs-12">Country</label>
                        <div class="col-md-10 col-sm-10 col-xs-12">
                            <input list="Country" name="Country" class="form-control" placeholder="Select Country">
                            <datalist id="Country">
                                <option value="Country 1">
                                <option value="Country 2">
                                <option value="Country 3">
                                <option value="Country 4">
                                <option value="Country 5">
                            </datalist>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2 col-sm-2 col-xs-12">Phone</label>
                        <div class="col-md-10 col-sm-10 col-xs-12">
                            <input type="tel" name="Phone" class="form-control col-md-10" placeholder="Phone" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2 col-sm-2 col-xs-12">Cell</label>
                        <div class="col-md-10 col-sm-10 col-xs-12">
                            <input type="tel" name="Cell" class="form-control col-md-10" placeholder="Cell" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2 col-sm-2 col-xs-12">Email</label>
                        <div class="col-md-10 col-sm-10 col-xs-12">
                            <input type="email" name="Email" class="form-control col-md-10" placeholder="Email" />
                        </div>
                    </div>

                    <div class="ln_solid col-md-12 col-sm-12 col-xs-12"></div>
                    <div class="form-group col-md-12 col-sm-12 col-xs-12 pdlr0">
                        <div class="row col-md-12 col-sm-12 col-xs-12 pdlr0" style="text-align:right;">
                            <button type="button" class="btn btn-primary">Add</button>
                            <button type="button" class="btn btn-default">Cancel</button>
                        </div>
                    </div>

                </form>

            </div>
        </div>
    </div>
</div>
<!-- MODAL1 END -->
@RenderPage("~/Views/Shared/_FooterLayout.cshtml")

<script type="text/javascript">
      $(document).ready(function(){
          $("#tambahcustomer").click(function () {
              $("#myModal").modal();
          });
          $("#editcustomer").click(function () {
              $("#myModal").modal();
          });
      });

</script>


