<script type="text/javascript">

    function InputAssetBrand() {
        var BrandId = document.getElementById("BrandId").value;
        var BrandNameId = document.getElementById("BrandNameId").value;

        if (BrandId == "") {
            $(".modal-body #peringatan3").text("Brand harus diisi");
            $('#btnerror').click(function (e) {
                $('#Alert3').modal('hide');
            })
            $("#Alert3").modal();
        } else if (BrandNameId == "") {
            $(".modal-body #peringatan3").text("Brand Name harus diisi");
            $('#btnerror').click(function (e) {
                $('#Alert3').modal('hide');
            })
            $("#Alert3").modal();
        }
    }

    function InputEditAssetBrand() {
        var EditBrandId = document.getElementById("EditBrandId").value;
        var EditBrandNameId = document.getElementById("EditBrandNameId").value;

        if (EditBrandId == "") {
            $(".modal-body #peringatan3").text("Brand harus diisi");
            $('#btnerror').click(function (e) {
                $('#Alert3').modal('hide');
            })
            $("#Alert3").modal();
        } else if (EditBrandNameId == "") {
            $(".modal-body #peringatan3").text("Brand Name harus diisi");
            $('#btnerror').click(function (e) {
                $('#Alert3').modal('hide');
            })
            $("#Alert3").modal();
        }
    }

</script>

