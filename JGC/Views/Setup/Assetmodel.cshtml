<script type="text/javascript">

    function InputAssetModel() {
        var ModelId = document.getElementById("ModelId").value;
        var ModelNameId = document.getElementById("ModelNameId").value;
        var BrandNameId = document.getElementById("BrandNameId").value;

        if (ModelId == "") {
            $(".modal-body #peringatan3").text("Model harus diisi");
            $('#btnerror').click(function (e) {
                $('#Alert3').modal('hide');
            })
            $("#Alert3").modal();
        } else if (ModelNameId == "") {
            $(".modal-body #peringatan3").text("Model Name harus diisi");
            $('#btnerror').click(function (e) {
                $('#Alert3').modal('hide');
            })
            $("#Alert3").modal();
        } else if (BrandNameId == "") {
            $(".modal-body #peringatan3").text("Brand Name harus diisi");
            $('#btnerror').click(function (e) {
                $('#Alert3').modal('hide');
            })
            $("#Alert3").modal();
        }
    }

    function InputEditAssetModel() {
        var EditModelId = document.getElementById("EditModelId").value;
        var EditModelNameId = document.getElementById("EditModelNameId").value;
        var EditBrandNameId = document.getElementById("EditBrandNameId").value;

        if (EditModelId == "") {
            $(".modal-body #peringatan3").text("Model harus diisi");
            $('#btnerror').click(function (e) {
                $('#Alert3').modal('hide');
            })
            $("#Alert3").modal();
        } else if (EditModelNameId == "") {
            $(".modal-body #peringatan3").text("Model Name harus diisi");
            $('#btnerror').click(function (e) {
                $('#Alert3').modal('hide');
            })
            $("#Alert3").modal();
        } else if (EditBrandNameId == "") {
            $(".modal-body #peringatan3").text("Brand Name harus diisi");
            $('#btnerror').click(function (e) {
                $('#Alert3').modal('hide');
            })
            $("#Alert3").modal();
        }
    }

</script>

