<script type="text/javascript">

    function InputAssetType() {
        var TypeId = document.getElementById("TypeId").value;
        var TypeNameId = document.getElementById("TypeNameId").value;

        if (TypeId == "") {
            $(".modal-body #peringatan3").text("Type harus diisi");
            $('#btnerror').click(function (e) {
                $('#Alert3').modal('hide');
            })
            $("#Alert3").modal();
        } else if (TypeNameId == "") {
            $(".modal-body #peringatan3").text("Type Name harus diisi");
            $('#btnerror').click(function (e) {
                $('#Alert3').modal('hide');
            })
            $("#Alert3").modal();
        }
    }

    function InputEditAssetType() {
        var EditTypeId = document.getElementById("EditTypeId").value;
        var EditTypeNameId = document.getElementById("EditTypeNameId").value;

        if (EditTypeId == "") {
            $(".modal-body #peringatan3").text("Type harus diisi");
            $('#btnerror').click(function (e) {
                $('#Alert3').modal('hide');
            })
            $("#Alert3").modal();
        } else if (EditTypeNameId == "") {
            $(".modal-body #peringatan3").text("Type Name harus diisi");
            $('#btnerror').click(function (e) {
                $('#Alert3').modal('hide');
            })
            $("#Alert3").modal();
        }
    }

</script>

