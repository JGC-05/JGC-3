
@{
    ViewBag.Title = "Asset Categories";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script type="text/javascript">

    function InputCategories() {
        var CategoryId = document.getElementById("CategoryId").value;

        if (CategoryId == "") {
            $(".modal-body #peringatan3").text("Category harus diisi");
            $('#btnerror').click(function (e) {
                $('#Alert3').modal('hide');
            })
            $("#Alert3").modal();
        }
    }

    function InputEditCategories() {
        var EditCategoryId = document.getElementById("EditCategoryId").value;

        if (EditCategoryId == "") {
            $(".modal-body #peringatan3").text("Category harus diisi");
            $('#btnerror').click(function (e) {
                $('#Alert3').modal('hide');
            })
            $("#Alert3").modal();
        }
    }

</script>

